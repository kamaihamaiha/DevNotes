<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_home_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="15dp"
    android:layout_height="50dp">


    <TextView
        android:focusable="true"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:id="@+id/tv_item_home_name"
        android:textColor="@color/grey_3"
        android:textSize="18sp"
        app:layout_constrainedWidth="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/finishTag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_arrow"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/bg_shape_circle"
        android:layout_width="5dp"
        android:layout_height="5dp"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/tv_item_home_name"
        android:src="@drawable/icon_arrow_right_gray"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey_d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>