<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/home_title"
        layout="@layout/layout_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:id="@+id/rv_home"
        android:layout_below="@id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layerType="software"
        android:id="@+id/tv_app_info"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:background="@color/MistyRose"
        android:id="@+id/iv_comment2"
        android:layout_marginTop="50dp"
        android:layout_below="@id/iv_comment"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_comment"
        android:layout_width="38dp"
        android:layout_height="38dp"/>

    <ImageView
        android:background="@color/MistyRose"
        android:id="@+id/iv_comment3"
        android:layout_marginTop="50dp"
        android:layout_below="@id/iv_comment"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_comment2"
        android:src="@drawable/icon_like"
        android:layout_width="38dp"
        android:layout_height="38dp"/>

    <ImageView
        android:background="@color/MistyRose"
        android:id="@+id/iv_comment4"
        android:layout_marginTop="50dp"
        android:layout_below="@id/iv_comment"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_comment2"
        android:src="@drawable/icon_like_no"
        android:layout_width="38dp"
        android:layout_height="38dp"/>

    <View
        android:background="@color/red_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/iv_comment2"
        android:layout_width="38dp"
        android:layout_height="38dp"/>

</RelativeLayout>