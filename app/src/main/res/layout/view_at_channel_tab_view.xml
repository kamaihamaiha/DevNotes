<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cn.kk.customview.widget.work.ChannelTabView
                android:id="@+id/channel_tab_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="12dp"
                android:paddingEnd="15dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_width"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/grey_4"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="360dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_change_size_minus"
            android:layout_gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_press_drawable"
            android:text="模拟屏幕宽度--"
            android:textColor="@color/DarkOrange" />

        <Button
            android:id="@+id/btn_change_size_add"
            android:layout_marginStart="50dp"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_press_drawable"
            android:text="模拟屏幕宽度++"
            android:textColor="@color/DarkOrange" />


    </LinearLayout>

</LinearLayout>