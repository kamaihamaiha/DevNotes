<resources>
    <!-- Base application theme. -->
    <style name="KKTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="toolbarStyle">@style/KKToolbarStyle</item>

    </style>

    <style name="NoTitle" parent="Theme.AppCompat.Light.NoActionBar" />

        <!--toolbar style-->
    <style name="KKToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="navigationIcon">@drawable/icon_back</item>
        <item name="titleTextAppearance">@style/KKToolbarTitleStyle</item>

    </style>

    <style name="KKToolbarTitleStyle">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">18sp</item>
    </style>



    <declare-styleable name="FlowLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CountIndicatorView">
        <attr name="numberOfItems" format="integer"/>
        <attr name="numberSelected" format="integer"/>
        <attr name="radius" format="integer"/>
        <attr name="itemSpacing2" format="integer"/>
        <attr name="selectedColor" format="color"/>
        <attr name="unSelectedColor" format="color"/>
        <attr name="android:padding"/>
    </declare-styleable>

    <style name="media_control_bar">
        <item name="android:progressDrawable">@drawable/media_progress_bar</item>
        <item name="android:thumb">@drawable/media_control_progress_thumb</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:focusable">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    ` <!--Button styles-->
    <style name="Button_Corner_Primary_Alpha">
        <item name="android:background">@drawable/bg_shape_corner_primary_alpha</item>
        <item name="android:foreground">@drawable/bg_press_dark_selector</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button_Corner_Primary_Alpha_60" parent="Button_Corner_Primary_Alpha">
        <item name="android:background">@drawable/bg_shape_corner_primary_alpha_60</item>
    </style>

    <style name="Theme.BottomSheetDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
<!--        <item name="behavior_peekHeight">wrap_content</item>-->
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>