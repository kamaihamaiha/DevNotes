<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeatBox" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        顶部状态栏颜色，如果指定 android:statusBarColor，将会被覆盖-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/soothing_blue</item>

        <!-- 不加 android 前缀，说明属性是在 AppCompat 库中-->
        <item name="buttonStyle">@style/BeatBoxButton.Strong</item>
        <item name="buttonStyleSmall">@style/BeatBoxButton.Small</item>

    </style>
</resources>